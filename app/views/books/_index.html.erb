<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th>Tag</th>
      <th colspan="3"></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% books.each do |book| %>
      <tr>
        <td><%= link_to(book.user) do %>
          <%= image_tag book.user.get_profile_image, size:'50x50' %>
          <% end %>
        </td>
        <td><%= link_to book.title,book, class: "book_#{book.id}" %></td>
        <td><%= book.body %></td>
        <!--<td><#%= book.tags.pluck(:name).join(',') %></td>-->
        <td>
          <% book.tags.each do |one_tag| %>
            <%= link_to one_tag.name, search_tag_path(tag_id: one_tag.id) %>
          <% end %>
        </td>
        <td class="favorite_btn_<%= book.id %>">
          <%= render 'favorites/favorite_btn', book: book %>
        </td>
        <td>コメント数: <%= book.book_comments.count %></td>
        <td class="form-group" id="star-<%= book.id %>"></td>
      </tr>

      <script>
        $('#star-<%= book.id %>').empty();
        $('#star-<%= book.id %>').raty({
          size: 10,
          starOff: '<%= asset_path('star-off.png') %>',
          starOn: '<%= asset_path('star-on.png') %>',
          starHalf: '<%= asset_path('star-half.png') %>',
          half: true,
          readOnly: true,
          // 値はbookの中のrateを持ってくる
          score: <%= book.rate %>,
        });
      </script>
  
    <% end %>
  </tbody>
</table>